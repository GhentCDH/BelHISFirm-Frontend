@prefix :       <http://belhisfirm.be/resource/> .
@prefix bhf:    <http://belhisfirm.be/ontology#> .
@prefix owl:    <http://www.w3.org/2002/07/owl#> .
@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix foaf:   <http://xmlns.com/foaf/0.1/> .
@prefix org:    <http://www.w3.org/ns/org#> .
@prefix rov:    <http://www.w3.org/ns/regorg#> .
@prefix schema: <http://schema.org/> .
@prefix dct:    <http://purl.org/dc/terms/> .
@prefix vcard:  <http://www.w3.org/2006/vcard/ns#> .


#################################################################
#    Classes
#################################################################

### Corporation Classes
bhf:Corporation
    rdf:type        owl:Class ;
    rdfs:subClassOf org:Organization, rov:RegisteredOrganization, bhf:Class ;
    rdfs:label      "Corporation"@en, "Bedrijf"@nl ;
    rdfs:comment    "A business organization registered in Belgium"@en .

### Address and Location
bhf:Address
    rdf:type        owl:Class ;
    rdfs:subClassOf vcard:Address, bhf:PropertyClass ;
    rdfs:label      "Address"@en, "Adres"@nl ;
    rdfs:comment    "Physical address of a corporation"@en .

bhf:LegalForm
    rdf:type        owl:Class ;
    rdfs:subClassOf bhf:PropertyClass ;
    rdfs:label      "Legal Form"@en, "Juridisch Statuut"@nl ;
    rdfs:comment    "Legal Form of a corporation within a certain timespan"@en .


### Corporation properties

bhf:hasLegalForm
    rdf:type     owl:ObjectProperty ;
    rdfs:domain  bhf:Corporation ;
    rdfs:range   bhf:LegalForm ;
    rdfs:label   "legal form"@en, "rechtsvorm"@nl ;
    rdfs:comment "The legal form of the corporation (e.g., SA, NV)"@en .

bhf:dateOfIncorporation
    rdf:type           owl:DatatypeProperty ;
    rdfs:subPropertyOf dct:created ;
    rdfs:domain        bhf:Corporation ;
    rdfs:range         xsd:date ;
    rdfs:label         "date of founding"@en, "oprichtingsdatum"@nl ;
    rdfs:comment       "The date when the corporation was founded"@en .

bhf:dateOfDissolution
    rdf:type     owl:DatatypeProperty ;
    rdfs:domain  bhf:Corporation ;
    rdfs:range   xsd:date ;
    rdfs:label   "date of dissolution"@en, "ontbindingsdatum"@nl ;
    rdfs:comment "The date when the corporation was dissolved"@en .

bhf:hasAddress
    rdf:type           owl:ObjectProperty ;
    rdfs:subPropertyOf vcard:hasAddress ;
    rdfs:subPropertyOf schema:address ;
    rdfs:domain        bhf:Corporation ;
    rdfs:range         bhf:Address ;
    rdfs:label         "has address"@en, "heeft adres"@nl ;
    rdfs:comment       "Links a corporation to its physical address"@en .

bhf:scobID
    rdf:type     owl:DatatypeProperty ;
    rdfs:domain  bhf:Corporation ;
    rdfs:range   xsd:integer ;
    rdfs:label   "scob ID"@en ;
    rdfs:comment "ID of corporation in the scob Database"@en .


### Address properties
bhf:streetAddress
    rdf:type           owl:DatatypeProperty ;
    rdfs:subPropertyOf vcard:street-address ;
    rdfs:domain        bhf:Address ;
    rdfs:range         xsd:string ;
    rdfs:label         "street address"@en, "straatadres"@nl .

bhf:city
    rdf:type           owl:DatatypeProperty ;
    rdfs:subPropertyOf vcard:locality ;
    rdfs:domain        bhf:Address ;
    rdfs:range         xsd:string ;
    rdfs:label         "city"@en, "stad"@nl .

bhf:country
    rdf:type           owl:DatatypeProperty ;
    rdfs:subPropertyOf vcard:country-name ;
    rdfs:domain        bhf:Address ;
    rdfs:range         xsd:string ;
    rdfs:label         "country"@en, "land"@nl .

